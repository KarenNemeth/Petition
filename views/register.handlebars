<div class="body">
    <h3>Sign Up Now</h3>
    <div id="registerform">
        <div id="message">{{message}}</div>
        <form method="POST">
            First Name:<br>
            <input type="text" name="firstname"><br>
            Last Name:<br>
            <input type="text" name="lastname"><br>
            Email Address:
            <input type="text" name="email"><br>
            Password:
            <input type="password" name="password"><br>
            <input type="submit" value="submit">
        </form>
        <p>If you already signed, please <a href="/user/login" id="logindesired">log in.</a></p>
    </div>
</div>
